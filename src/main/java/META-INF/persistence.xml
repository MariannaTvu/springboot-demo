<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit" transaction-type="RESOURCE_LOCAL">

        <class>com.bionic.baglab.entity.PagesEntity</class>
        <class>com.bionic.baglab.entity.PagesTypeEntity</class>
        <class>com.bionic.baglab.entity.UserEntity</class>

        <properties> <!--?useUnicode=true&characterEncoding=utf8-->  <!--&  \u0026-->
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/baglab?useUnicode=true"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>

            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/baglab?useUnicode=true"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>

            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/baglab?useUnicode=true"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>

            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/baglab?useUnicode=true"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>



            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />

        </properties>
    </persistence-unit>
</persistence>
